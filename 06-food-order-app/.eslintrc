{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/jsx-runtime",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "react/function-component-definition": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        // "react/destructuring-assignment": [0, "never"],
        "react/button-has-type": 0,
        "react/react-in-jsx-scope": 0,
        "react/prop-types": 0,
        "arrow-body-style": 0
    }
}
